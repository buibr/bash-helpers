#!/bin/bash 

gitversion=$(git --version)
directory=`pwd`
Repo=
Root=
Hostname=
BBUsername=$(git config --global user.username);
BBTeam='novatio'
BBUrl=

repository()
{
    read -p "Name the repository:  " Repo
    echo "--- "
}

hostname() 
{ 
    read -p "Hostname ( ${Repo}.test ): " Hostname
    echo "--- "

    if [ -z "$Hostname" ];
    then
        Hostname="$Repo.test"
    fi
}

rootdirectory()
{
    read -p "What is the root directory (default: $directory/$Repo) ?:  " Root
    echo "---"

    if test -z "$Root"
    then
        Root="$directory/$Repo"
    else
        Root="$Root/$Repo"
    fi
}

bitbucketusername()
{
    read -p "What is your bitbucket username?:  " BBUsername
    echo "---"
    
    if test -z "$BBUsername"
    then
        BBUsername="$(git config --global user.username)"
    fi
}

bitbucketurl()
{
    BBUrl="https://$BBUsername@bitbucket.org/$BBTeam/overload-worldwide.git/status"

    BBStatus = $(curl $BBUrl)
}




echo "################################"
echo "#    Create new repo in bitbucket"
echo "################################"
echo "#    $gitversion "
echo "################################"

repository
hostname
rootdirectory
bitbucketusername
bitbucketurl

echo "################################"
echo "#    Repository       : $Repo"
echo "#    Root directory   : $Root"
echo "#    Hostname         : $Hostname"
echo "#    Bitbucket User   : $BBUsername"
echo "#    Bitbucket Team   : $BBTeam"
echo "#    Bitbucket Url    : $BBUrl"
echo "################################"

